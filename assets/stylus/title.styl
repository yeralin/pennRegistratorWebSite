@import 'nib'
@import 'requires/*'
abs = absolute

.title .columns
	padding-right 24% !important

.title p.title
	color #2c3e50

.title
	.leftContent
		margin-top 7%
	.rightContent
		margin-top 7%

.midnightHeader.first
	.left
		float right
		padding-left 28%
		margin-left -1.2%
		width 50%
		background #2c3e50
		color #FFFFFF
	.right
		width 50%
		background #FFFFFF
		color #2c3e50

.leftContent
	float left
	position relative
	color #FFFFFF
	display inline-block
	fontSetGothamLight()
	width 50%
	height 100%
	.instrLabel
		margin-top 5%
		margin-bottom 0%
		font-size 0.65em
		font-weight 900
	.addLabel
		margin-top 5%
		font-size 0.35em
		font-weight 600
	h3
		margin-top -1%
		color #FFFFFF
		font-weight 600
	ol
		line-height 175%
		text-align left
		font-size 0.3em
		margin-left 25%
	ul
		line-height 175%
		text-align center
		font-size 0.3em
		margin-left 5% !important
.rightContent
	float right
	position relative
	color #000000
	display inline-block
	fontSetGothamLight()
	width 50%
	height 100%
	.howLabel
		margin-top 5%
		font-size 0.65em
		font-weight 900
	.disc
		line-height 175%
		text-align left
		font-size 0.33em
		font-weight 500
		margin-left 20%

.title #first
	width 50%
	height 100%
	z-index -1 !important
	opacity 1
	background-color #2c3e50

.title #second
	backgroundSet()
	background-repeat no-repeat
	background-size 100%
	background-color #FFFFFF
	z-index -1 !important