@import 'nib'
@import 'requires/*'
abs = absolute

.title .columns
	padding-right 24% !important

.title p.title
	color #2c3e50


.leftContent
	float left
	position relative
	color #FFFFFF
	display inline-block
	fontSetGothamLight()
	font-size 2vh
	width 50%
	height 100%
	.macLabel
		margin-top 5%
		font-size 5vh
		font-weight 900
	.macView
		height 100%
		width 60%
		margin 0 auto
		background-image url('../img/macView.png')
		background-repeat no-repeat
		background-size 100%

.rightContent
	float right
	position relative
	color #000000
	display inline-block
	fontSetGothamLight()
	font-size 2vh
	width 50%
	height 100%
	.windowsLabel
		margin-top 5%
		font-size 5vh
		font-weight 900
	.windowsView
		height 100%
		width 60%
		margin 0 auto
		background-image url('../img/macView.png')
		background-repeat no-repeat
		background-size 100%

.title #first
	width 50%
	height 100%
	z-index -1 !important
	opacity 1
	background-color #2c3e50

.title #second
	backgroundSet()
	background-repeat no-repeat
	background-size 100%
	background-color #FFFFFF
	z-index -1 !important